<h2 style="color:#3da9ff;">Mini 2048</h2>
<div class="grid" id="grid"></div>

<script>
const grid=document.getElementById("grid");
let cells=[];

function init(){
cells=[];
for(let i=0;i<16;i++){
let val=Math.random()<0.2?2:0;
const div=document.createElement("div");
div.className="cell";
div.innerText=val>0?val:"";
grid.appendChild(div);
cells.push(div);
}
}
init();
</script>
